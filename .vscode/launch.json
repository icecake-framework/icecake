{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch backend",
            "type": "go",
            "request": "launch",
            "mode": "exec",
            "program": "${workspaceFolder}/cmd/icecake/main.go",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "args": [
                "--env",
                "./configs/dev"
            ]
        },
        {
            "name": "Makedoc",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/web/docs/makedoc.go",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "args": [
                "--output",
                "./docs",
                "--verbose"
            ]
        },
        {
            "name": "Debug go",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${file}",
            "trace": "verbose",
            "console": "integratedTerminal",
            "env": {},
        },
        {
            "name": "Tests",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}/${file}",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "env": {},
        }
    ]
}